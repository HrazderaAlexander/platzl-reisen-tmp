{
  "kind": "singleType",
  "collectionName": "homepage",
  "info": {
    "singularName": "homepage",
    "pluralName": "homepages",
    "displayName": "Homepage Konfiguration",
    "description": "Konfiguration für die Homepage"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "hero_titel": {
      "type": "string",
      "required": true,
      "default": "Platzl Reisen",
      "maxLength": 255
    },
    "hero_untertitel": {
      "type": "string",
      "required": true,
      "default": "Platz(l) nehmen und wohlfühlen",
      "maxLength": 500
    },
    "hero_bilder": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images"]
    },
    "diashow_geschwindigkeit": {
      "type": "integer",
      "required": true,
      "default": 5000,
      "min": 1000,
      "max": 10000
    },
    "features_titel": {
      "type": "string",
      "required": true,
      "default": "Warum Platzl Reisen wählen?",
      "maxLength": 255
    },
    "features_untertitel": {
      "type": "string",
      "required": true,
      "default": "Entdecken Sie, warum Tausende von Kunden uns vertrauen",
      "maxLength": 500
    },
    "features": {
      "type": "component",
      "repeatable": true,
      "component": "homepage.feature"
    },
    "cta_therme_text": {
      "type": "string",
      "required": true,
      "default": "Jetzt buchen",
      "maxLength": 100
    },
    "cta_sightseeing_text": {
      "type": "string",
      "required": true,
      "default": "Mehr erfahren",
      "maxLength": 100
    },
    "telefon": {
      "type": "string",
      "required": true,
      "default": "0732 27 27 17",
      "maxLength": 50
    },
    "email": {
      "type": "email",
      "required": true,
      "default": "linz@platzl-reisen.at"
    }
  }
}