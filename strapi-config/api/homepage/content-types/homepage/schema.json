{
  "kind": "singleType",
  "collectionName": "homepage",
  "info": {
    "singularName": "homepage",
    "pluralName": "homepages",
    "displayName": "Homepage",
    "description": "Homepage Inhalte und Einstellungen"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "hero_titel": {
      "type": "string",
      "required": true,
      "default": "Platzl Reisen"
    },
    "hero_untertitel": {
      "type": "text",
      "required": true,
      "default": "Platz(l) nehmen und wohlfühlen"
    },
    "hero_bilder": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": ["images"]
    },
    "diashow_geschwindigkeit": {
      "type": "integer",
      "required": true,
      "default": 5000,
      "min": 2000,
      "max": 10000
    },
    "features_titel": {
      "type": "string",
      "required": true,
      "default": "Warum Platzl Reisen wählen?"
    },
    "features_untertitel": {
      "type": "text",
      "required": true,
      "default": "Entdecken Sie, warum Tausende von Kunden uns vertrauen"
    },
    "features": {
      "type": "component",
      "repeatable": true,
      "component": "homepage.feature"
    },
    "cta_therme_text": {
      "type": "string",
      "required": true,
      "default": "Jetzt buchen"
    },
    "cta_sightseeing_text": {
      "type": "string",
      "required": true,
      "default": "Mehr erfahren"
    },
    "telefon": {
      "type": "string",
      "required": true,
      "default": "0732 27 27 17"
    },
    "email": {
      "type": "email",
      "required": true,
      "default": "linz@platzl-reisen.at"
    }
  }
}